{
    "compilerOptions": {
        "target": "es6",
        "module": "es2015",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "rootDir": "./src",
        "alwaysStrict": true,
        "allowJs": true,
        "sourceMap": true,
        "importHelpers": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "lib": ["es7", "es2015", "es2015.promise", "es2015.generator", "dom"],
        "typeRoots": [
            "node_modules/@types",
            "types"
        ]
    },
    "exclude": [
        "**/node_modules/*"
    ]
}
