{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src/",
    "outDir": "./dist",
    "alwaysStrict": true,
    "allowJs": true,
    "sourceMap": true,
    "importHelpers": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "lib": [
      "es7",
      "es2015",
      "es2015.promise",
      "es2015.generator",
      "dom"
    ],
    "skipLibCheck": true
  },
  "typeRoots": [
    "node_modules/@types"
  ]
}
